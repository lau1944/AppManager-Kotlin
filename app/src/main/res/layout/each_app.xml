<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/darkgrey">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_7sdp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/darkgrey"
    android:id="@+id/app_layout"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="6dp"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:background="@color/darkgrey">

        <ImageView
            android:id="@+id/my_apps_image"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/my_apps_image"
            android:layout_toStartOf="@id/my_app_pop_up"
            android:layout_marginEnd="@dimen/_5sdp">

            <TextView
                android:id="@+id/my_apps_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/roboto"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:layout_marginEnd="@dimen/_15sdp">

            </TextView>

            <TextView
                android:id="@+id/my_apps_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:textColor="@color/colorText"
                android:layout_marginEnd="@dimen/_15sdp">

            </TextView>


            <TextView
                android:id="@+id/my_app_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textSize="10sp"
                android:layout_marginStart="@dimen/_10sdp"
                android:alpha="0.5"
                android:textColor="@color/colorText"
                android:layout_marginEnd="@dimen/_5sdp">

            </TextView>

        </LinearLayout>

        <ImageView
            android:id="@+id/my_app_pop_up"
            android:layout_width="@dimen/small_button"
            android:layout_height="@dimen/small_button"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:src="@drawable/menu"
            android:focusable="true"
            android:clickable="true"
            android:tint="@color/colorBackGround"
            android:background="?attr/selectableItemBackgroundBorderless">

        </ImageView>


    </RelativeLayout>
</androidx.cardview.widget.CardView>
</layout>